{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {},
	"variables": {},
	"resources": [
		{
			"type": "Microsoft.Web/sites",
			"kind": "functionapp",
			"name": "<function-name>",
			"apiVersion": "2020-09-01",
			"location": "[resourceGroup().location]",
			"properties": {
				"enabled": true,
				"hostNameSslStates": [
					{
						"name": "[concat(<function-name>,'.azurewebsites.net')]",
						"sslState": "Disabled",
						"hostType": "Standard"
					},
					{
						"name": "[concat(<function-name>,'.scm.azurewebsites.net')]",
						"sslState": "Disabled",
						"hostType": "Repository"
					}
				],
				"clientAffinityEnabled": true,
				"containerSize": 1536,
				"dailyMemoryTimeQuota": 0,
				"httpsOnly": true,
				"siteConfig": {
					"cors": {
						"allowedOrigins": [
							"*"
						]
					}
				}
			},
			"identity": {
				"type": "SystemAssigned"
			},
			"dependsOn": []
		},
		{
			"type": "Microsoft.Web/sites/config",
			"name": "[concat(<function-name>, '/appsettings')]",
			"apiVersion": "2020-09-01",
			"dependsOn": [
				"[resourceId('Microsoft.Web/sites', <function-name>)]"
			],
			"properties": {
				"AzureWebJobsStorage": "<storage-account-connection-string>",
				"AzureWebJobsDisableHomepage": true,
                "WEBSITE_TIME_ZONE": "W. Europe Standard Time",
				"WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "<storage-account-connection-string>",
				"WEBSITE_CONTENTSHARE": "<function-name>",
				"APPINSIGHTS_INSTRUMENTATIONKEY": "<app-insights-instrumentation-key>",
				"FUNCTIONS_EXTENSION_VERSION": "~3"
			}
		},
		{
			"name": "[concat(<function-name>, '/authsettings')]",
			"type": "Microsoft.Web/sites/config",
			"apiVersion": "2020-09-01",
			"dependsOn": [
				"[resourceId('Microsoft.Web/sites', <function-name>)]"
			],
			"properties": {
				"enabled": "true",
                "unauthenticatedClientAction": "AllowAnonymous",
                "tokenStoreEnabled": true,
				"defaultProvider": "AzureActiveDirectory",
				"clientId": "<app-id>",
                "clientSecret": "<app-secret>",
				"issuer": "[concat('https://login.microsoftonline.com/', subscription().tenantId)]",
                "allowedAudiences": [
                    "[concat('https://', <function-name>, '.azurewebsites.net/.auth/login/aad/callback')]"
                ],
                "isAadAutoProvisioned": true
			}
		}
	],
	"outputs": {}
}