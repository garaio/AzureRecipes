{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerRegistryLoginServer": {
            "defaultValue": "",
            "type": "string"
        },
        "containerRegistryUsername": {
            "defaultValue": "",
            "type": "string"
        },
        "containerRegistryPassword": {
            "defaultValue": "",
            "type": "string"
        },
        "dockerImageName": {
            "defaultValue": "azurerecipe",
            "type": "string"
        },
        "dockerImageTag": {
            "defaultValue": "",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-03-01",
            "name": "[parameters('dockerImageName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('dockerImageName')]",
                        "properties": {
                            "image": "[concat(parameters('containerRegistryLoginServer'), '/', parameters('dockerImageName'), ':', parameters('dockerImageTag'))]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "imageRegistryCredentials": [
                    {
                        "server": "[parameters('containerRegistryLoginServer')]",
                        "username": "[parameters('containerRegistryUsername')]",
                        "password": "[parameters('containerRegistryPassword')]"
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "ip": "20.101.5.52",
                    "type": "Public"
                },
                "osType": "Linux"
            }
        }
    ]
}